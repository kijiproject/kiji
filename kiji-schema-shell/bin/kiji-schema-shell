# This is the kiji-schema-shell entry point script during development.

bin=`dirname $0`

release_dir=`ls -d -1 ${bin}/../target/kiji-schema-shell*-release/kiji-schema-shell*/ \
    | sort -r | head -1`
if [ ! -d "$release_dir" ]; then
  echo "No target directory found, so building kiji-schema-shell with 'mvn package' first..."
  mvn package -Pfast
  release_dir=`ls -d -1 ${bin}/../target/kiji-schema-shell*-release/kiji-schema-shell*/ \
      | sort -r | head -1`
fi
release=`cd ${release_dir} && pwd`

exec $release/bin/kiji-schema-shell "$@"
