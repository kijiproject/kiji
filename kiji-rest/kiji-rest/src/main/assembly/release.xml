  <id>release</id>
  <formats>
    <format>dir</format>
    <format>tar.gz</format>
  </formats>
  <includeBaseDirectory>true</includeBaseDirectory>
  <fileSets>
    <fileSet>
      <useDefaultExcludes>true</useDefaultExcludes>
      <outputDirectory></outputDirectory>
      <directory>${project.basedir}/../</directory>
      <fileMode>0644</fileMode>
      <includes>
        <include>NOTICE.txt</include>
        <include>LICENSE.txt</include>
        <include>README.md</include>
        <include>RELEASE_NOTES.txt</include>
      </includes>
      <filtered>true</filtered>
    </fileSet>
    <fileSet>
      <useDefaultExcludes>false</useDefaultExcludes>
      <outputDirectory>bin</outputDirectory>
      <directory>${project.basedir}/../kiji-rest/src/main/scripts</directory>
      <fileMode>0755</fileMode>
      <directoryMode>0755</directoryMode>
      <filtered>false</filtered>
    </fileSet>
    <fileSet>
      <useDefaultExcludes>false</useDefaultExcludes>
      <outputDirectory>conf</outputDirectory>
      <directory>${project.basedir}/../kiji-rest/src/main/conf</directory>
    </fileSet>
    <fileSet>
      <!-- rest clients -->
      <useDefaultExcludes>false</useDefaultExcludes>
      <outputDirectory>clients</outputDirectory>
      <directory>${project.basedir}/../kiji-rest/../clients</directory>
    </fileSet>
  </fileSets>
</assembly>
