<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>org.kiji.kiji-bento</groupId>
  <artifactId>kiji-bento</artifactId>
  <version>1.0.0-rc4-SNAPSHOT</version>
  <packaging>pom</packaging>

  <parent>
    <groupId>org.kiji.pom</groupId>
    <artifactId>root-pom</artifactId>
    <version>1.0.3-SNAPSHOT</version>
  </parent>

  <name>kiji-bento</name>
  <description>Standalone "BentoBox" developer distribution of Kiji.</description>
  <inceptionYear>2012</inceptionYear>

  <properties>
    <bento-cluster.version>1.0.0-rc3</bento-cluster.version>
    <kiji-schema.version>1.0.0-rc3</kiji-schema.version>
    <kiji-schema-shell.version>1.0.0-rc3</kiji-schema-shell.version>
    <kiji-phonebook.version>1.0.0-rc3</kiji-phonebook.version>
  </properties>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-assembly-plugin</artifactId>
        <executions>
          <execution>
            <id>pre-release-requirements</id>
            <phase>prepare-package</phase>
            <goals>
              <goal>single</goal>
            </goals>
            <configuration>
              <descriptors>
                <descriptor>${basedir}/src/main/assembly/pre-release-requirements.xml</descriptor>
              </descriptors>
              <attach>false</attach>
              <finalName>prereqs</finalName>
            </configuration>
          </execution>
          <execution>
            <id>make-assembly</id>
            <phase>package</phase>
            <goals>
              <goal>single</goal>
            </goals>
            <configuration>
              <descriptors>
                <descriptor>${basedir}/src/main/assembly/release.xml</descriptor>
              </descriptors>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

  <dependencies>
    <!-- Kiji project dependencies -->

    <dependency>
      <groupId>org.kiji.examples.phonebook</groupId>
      <artifactId>kiji-phonebook</artifactId>
      <version>${kiji-phonebook.version}</version>
      <classifier>release</classifier>
      <type>tar.gz</type>
    </dependency>
    <dependency>
      <groupId>org.kiji.schema</groupId>
      <artifactId>kiji-schema</artifactId>
      <version>${kiji-schema.version}</version>
      <classifier>release</classifier>
      <type>tar.gz</type>
    </dependency>
    <dependency>
      <groupId>org.kiji.schema-shell</groupId>
      <artifactId>kiji-schema-shell</artifactId>
      <version>${kiji-schema-shell.version}</version>
      <classifier>release</classifier>
      <type>tar.gz</type>
    </dependency>
    <dependency>
      <groupId>org.kiji.bento</groupId>
      <artifactId>bento-cluster</artifactId>
      <version>${bento-cluster.version}</version>
      <classifier>release</classifier>
      <type>tar.gz</type>
    </dependency>
  </dependencies>

  <repositories>
    <repository>
      <id>kiji-repos</id>
      <name>kiji-repos</name>
      <url>https://repo.wibidata.com/artifactory/kiji</url>
    </repository>
    <repository>
      <id>kiji-nightly</id>
      <name>kiji-nightly</name>
      <url>https://repo.wibidata.com/artifactory/kiji-nightly</url>
    </repository>
  </repositories>

</project>
